<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_conversation"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgConversation"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvUsername"
            android:text="@string/example_username"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvLastMessage"
            app:layout_constraintTop_toTopOf="@id/imgConversation"
            app:layout_constraintStart_toEndOf="@id/imgConversation"/>

        <TextView
            android:id="@+id/tvLastMessage"
            android:text="@string/example_message"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingEnd="@dimen/define_dimen_20"
            app:layout_constraintEnd_toEndOf="@id/tvTimestamp"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintBottom_toBottomOf="@id/imgConversation"
            app:layout_constraintStart_toStartOf="@id/tvUsername"/>

        <TextView
            android:id="@+id/tvTimestamp"
            android:text="@string/example_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgConversation"
            app:layout_constraintTop_toTopOf="@id/imgConversation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

